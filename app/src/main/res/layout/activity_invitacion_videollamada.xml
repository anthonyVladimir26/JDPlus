<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_invitacion_videollamada"
    tools:context=".Activities.InvitacionVideollamada">

    <ImageView
        android:id="@+id/imagenAceptarVideollamada"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginTop="50sp"
        android:contentDescription="@string/app_name"
        app:tint="@color/colorIconos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textoAceptarLlamada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4sp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="VideoLlamada Entrante"
        android:textColor="@color/colorIconos"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/imagenAceptarVideollamada"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textNombreUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/colorIconos"
            android:textSize="18sp"/>
    </LinearLayout>
    
    <ImageView
        android:id="@+id/aceptarVideollamadaimg"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginStart="60sp"
        android:layout_marginBottom="50sp"
        android:background="@drawable/background_aceptar_videollamada"
        android:contentDescription="@string/app_name"
        android:padding="8sp"
        android:src="@drawable/ic_aceptar_videollamada"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/colorIconos" />

    <ImageView
        android:id="@+id/rechazarVideollamadaimg"
        android:layout_width="28dp"
        android:layout_height="36dp"
        android:layout_marginEnd="60sp"
        android:layout_marginBottom="50sp"
        android:background="@drawable/background_rechazar_videollamada"
        android:contentDescription="@string/app_name"
        android:padding="8sp"
        android:src="@drawable/ic_rechazar_videollamda"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/colorIconos" />

</androidx.constraintlayout.widget.ConstraintLayout>